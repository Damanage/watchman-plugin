{
  "name": "Client monitoring",
  "description": "Client monitoring",
  "short_name": "Watchman",
  "version": "2.1",
  "permissions": [
    "identity",
    "debugger",
    "tabs",
    "activeTab",
    "http://bcvm327/*",
    "webRequest"
  ],
  "icons": {
    "128": "logo128x128.png"
  },
  "browser_action": { "default_icon": "logo.png" },
  "content_scripts": [
    {
      "js": [ "Lib/jquery-3.1.1.min.js", "content.bundle.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
    }
  ],
  "background": {
    "scripts": [ "Lib/jquery-3.1.1.min.js", "mbg.bundle.js" ],
    "persistent": true
  },
  "manifest_version": 2,
  "update_url": "http://bcvm303:7001/watchman/api/updates.xml"

}

